{
    "name": "atn-news",
    "version": "0.1.0",
    "description": "ATN News graphics for NodeCG",
    "author": "kotwys",
    "license": "MIT",
    "private": true,
    "scripts": {
        "clean": "rimraf dashboard extension graphics",
        "build": "run-s clean build:*",
        "build:graphics": "parcel build src/graphics/*.html -d graphics/ --public-url ./",
        "watch": "run-p watch:*",
        "watch:graphics": "parcel watch src/graphics/*.html -d graphics/ --public-url ./"
    },
    "nodecg": {
        "compatibleRange": "^1.6",
        "graphics": [
            {
                "file": "main.html",
                "width": 1920,
                "height": 1080
            }
        ]
    },
    "browserslist": [
        "last 1 Chrome versions"
    ],
    "devDependencies": {
        "@tsconfig/svelte": "^1.0.4",
        "@typescript-eslint/eslint-plugin": "^3.7.1",
        "@typescript-eslint/parser": "^3.7.1",
        "eslint": "^7.5.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-svelte3": "^2.7.3",
        "npm-run-all": "^4.1.5",
        "parcel-bundler": "^1.12.4",
        "parcel-plugin-svelte": "^4.0.6",
        "prettier": "^2.0.5",
        "prettier-plugin-svelte": "^1.1.0",
        "rimraf": "^3.0.2",
        "sass": "^1.26.10",
        "svelte": "^3.24.0",
        "svelte-check": "^1.0.1",
        "svelte-preprocess": "^4.0.9",
        "typescript": "^3.9.7"
    }
}
