{
    "name": "atnnews-layouts",
    "version": "0.1.0",
    "description": "ATN News' on-screen graphics for NodeCG",
    "author": "kotwys",
    "license": "MIT",
    "private": true,
    "scripts": {
        "clean": "rimraf dashboard extension graphics",
        "build": "run-s clean build:*",
        "build:dashboard": "webpack --config webpack.dashboard.js",
        "build:extension": "tsc -b tsconfig.extension.json",
        "build:graphics": "webpack --config webpack.graphics.js",
        "watch": "run-p watch:*",
        "watch:dashboard": "webpack --config webpack.dashboard.js -w",
        "watch:graphics": "webpack --config webpack.graphics.js -w",
        "watch:extension": "tsc -b tsconfig.extension.json -w"
    },
    "nodecg": {
        "compatibleRange": "^1.6",
        "dashboardPanels": [
            {
                "name": "omnibar",
                "title": "Omnibar",
                "file": "omnibar.html",
                "width": 2
            },
            {
                "name": "headline",
                "title": "Headline",
                "file": "headline.html",
                "width": 3
            },
            {
                "name": "nameplate",
                "title": "Nameplate",
                "file": "nameplate.html",
                "width": 2
            },
            {
                "name": "program",
                "title": "Program",
                "file": "program.html",
                "width": 2
            }
        ],
        "graphics": [
            {
                "file": "main.html",
                "width": 1920,
                "height": 1080
            }
        ],
        "assetCategories": [
            {
              "name": "ticker-files",
              "title": "Tickers",
              "allowedTypes": ["txt"]
            }
        ]
    },
    "browserslist": [
        "last 1 Chrome versions"
    ],
    "devDependencies": {
        "@tsconfig/svelte": "^1.0.4",
        "@typescript-eslint/eslint-plugin": "^3.7.1",
        "@typescript-eslint/parser": "^3.7.1",
        "css-loader": "^4.2.0",
        "eslint": "^7.5.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-svelte3": "^2.7.3",
        "glob": "^7.1.6",
        "html-webpack-plugin": "^4.3.0",
        "mini-css-extract-plugin": "^0.9.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "prettier-plugin-svelte": "^1.1.0",
        "rimraf": "^3.0.2",
        "sass": "^1.26.10",
        "sass-loader": "^9.0.2",
        "svelte": "^3.24.0",
        "svelte-check": "^1.0.1",
        "svelte-loader": "^2.13.6",
        "svelte-preprocess": "^4.0.9",
        "ts-loader": "^8.0.1",
        "typescript": "^3.9.7",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-livereload-plugin": "^2.3.0"
    }
}
